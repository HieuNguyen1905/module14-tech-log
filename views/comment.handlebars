<div class="blog">
    <section class="status-box">
        <h2 class="title">{{personBlogs.title}}</h2>
        <h3>{{personBlogs.status}} - {{personBlogs.User.name}}</h3>
    </section>
</div>

<h2 class="head">Comment: </h2>
{{#each personComment}}
<div class="mid">
    <h3>{{comment}} - {{User.name}}</h3>
</div>
<div class="mid">
    <p>posted on {{createdAt}}</p>
</div>
{{/each}}
<h3 class="head">Add your comment</h3>
<form id = "new-post-form" name="{{blogs.id}}">
    <div>
        <textarea id="comment-input"></textarea>
    </div>
    <button class="form-btn" >Finish</button>
</form>
<script src="/js/comment.js"></script>